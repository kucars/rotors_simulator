<?xml version="1.0"?>
<launch>
  <arg name="headless" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="enable_logging" default="false"/>
  <arg name="enable_ground_truth" default="true"/>
  <arg name="debug" default="false"/>
  <arg name="ns" default="iris"/>
  <arg name="log_file" default="$(arg ns)"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find rotors_gazebo)/worlds/indoor_gesture.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="headless" value="$(arg headless)"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>
   <group ns="iris">
      <include file="$(find rotors_gazebo)/launch/spawn_iris.launch">
        <arg name="model" value="$(find rotors_description)/urdf/iris_gesture_sensors.gazebo" />
        <arg name="enable_logging" value="$(arg enable_logging)" />
        <arg name="enable_ground_truth" value="$(arg enable_ground_truth)" />
        <arg name="log_file" value="$(arg log_file)"/>
	<arg name="x" value="-13.0"/>
	<arg name="y" value="-8.5"/>
      </include>
   </group>
   
   <group ns="firefly">
      <include file="$(find rotors_gazebo)/launch/spawn_firefly.launch">
        <arg name="model" value="$(find rotors_description)/urdf/firefly_generic_odometry_sensor.gazebo" />
        <arg name="enable_logging" value="$(arg enable_logging)" />
        <arg name="enable_ground_truth" value="$(arg enable_ground_truth)" />
        <arg name="log_file" value="$(arg log_file)"/>
	<arg name="x" value="-15.0"/>
	<arg name="y" value="-8.5"/>
      </include>
   </group>
   
    <include file="$(find px4)/launch/iris.launch">
	<arg name="ns" value="iris"/>
    </include>

    <include file="$(find px4)/launch/firefly.launch">
	<arg name="ns" value="firefly"/>
    </include>
    
    <group ns="iris">
      <arg name="fcu_url" default="udp://localhost:14560@localhost:14565" />
      <arg name="gcs_url" default="" />
      <arg name="tgt_system" default="1" />
      <arg name="tgt_component" default="50" />
      <include file="$(find mavros)/launch/node.launch">
        <arg name="pluginlists_yaml" value="$(find mavros)/launch/px4_pluginlists.yaml" />
        <arg name="config_yaml" value="$(find mavros)/launch/px4_config.yaml" />
        <arg name="fcu_url" value="$(arg fcu_url)" />
        <arg name="gcs_url" value="$(arg gcs_url)" />
        <arg name="tgt_system" value="$(arg tgt_system)" />
        <arg name="tgt_component" value="$(arg tgt_component)" />
      </include>
    </group>
    
    <group ns="firefly">
      <arg name="fcu_url" default="udp://localhost:14561@localhost:14566" />
      <arg name="gcs_url" default="" />
      <arg name="tgt_system" default="1" />
      <arg name="tgt_component" default="50" />
      <include file="$(find mavros)/launch/node.launch">
        <arg name="pluginlists_yaml" value="$(find mavros)/launch/px4_pluginlists.yaml" />
        <arg name="config_yaml" value="$(find mavros)/launch/px4_config.yaml" />
        <arg name="fcu_url" value="$(arg fcu_url)" />
        <arg name="gcs_url" value="$(arg gcs_url)" />
        <arg name="tgt_system" value="$(arg tgt_system)" />
        <arg name="tgt_component" value="$(arg tgt_component)" />
      </include>
    </group>
    
</launch>
